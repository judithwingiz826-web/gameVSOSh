{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MathCoreMaterial",
  "type": "object",
  "required": [
    "id",
    "type",
    "topic",
    "level",
    "olympiad",
    "tags",
    "skills",
    "statement",
    "hints",
    "solution"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "enum": [
        "problem",
        "theory",
        "example",
        "training_block",
        "control_block"
      ]
    },
    "topic": {
      "type": "string"
    },
    "level": {
      "enum": [
        "starter",
        "basic",
        "intermediate",
        "olympiad"
      ]
    },
    "olympiad": {
      "type": "object",
      "required": [
        "track",
        "source"
      ],
      "properties": {
        "track": {
          "enum": [
            "none",
            "municipal",
            "regional",
            "national",
            "international"
          ]
        },
        "source": {
          "type": "string"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "statement": {
      "type": "string"
    },
    "hints": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": [
          "step",
          "title",
          "text"
        ],
        "properties": {
          "step": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4
          },
          "title": {
            "enum": [
              "Идея",
              "Метод",
              "Почти решение",
              "Полное решение"
            ]
          },
          "text": {
            "type": "string"
          }
        }
      }
    },
    "solution": {
      "type": "string"
    },
    "answer": {
      "type": "string"
    }
  }
}